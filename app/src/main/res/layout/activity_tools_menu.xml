        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="500dp"
        android:onClick="memoryClick"
        android:text="MEMORY CARDS"
        app:layout_constraintBottom_toBottomOf="parent"
